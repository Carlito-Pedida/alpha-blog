<% @articles.each do |article| %>
  <div class="card text-center my-3">
    <div class="card-header" id="head_foot">
    <i  class="text-white">by <%= article.user.first_name %>  <%= article.user.last_name %></i>
    </div>
    <div class="card-body px-5 card_bg text-black px-auto">
      <h5 class="card-title"> <%= link_to article.title.titlecase, article_path(article),  class: "title_link" %></h5>
      <p class="card-text"><%= simple_format(article.description)%></p>
      <%= link_to "Show", article_path(article), class: "actions_go" %>
      <%= link_to "Edit", edit_article_path(article), class: "actions_edit" %>
      <%= link_to "Delete", article_path(article),  data:{ turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "actions_del" %>
    </div>
    <div class="card-footer text-white"  id="head_foot">
      Posted <%=  time_ago_in_words(article.created_at)%> ago... Updated <%=  time_ago_in_words(article.updated_at)%> ago...
    </div>
  </div>
  <% end %>